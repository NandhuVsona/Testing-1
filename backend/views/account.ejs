    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;

        font-family: "Poppins", "sanserif";
      }
      @font-face {
        font-family: "DS-DIGIB";
        src: url(DS-DIGIB.TTF);
      }
      .container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
      }
      .profile__ {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 15px;
        width: 100%;
      }
      img {
        width: 100%;
        height: 100%;
      }
      .dp__ {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: rgba(219, 218, 219, 0.88);
        overflow: hidden;
        border-bottom: 8px solid #d0a2f7;
      }
      .facultys__data {
        display: flex;
        flex-direction: column;
        gap: 10px;
        justify-content: center;
        align-items: center;
        padding-top: 10px;
      }
      .faculty__name_,
      .faculty__details_ {
        text-align: center;
      }

      .faculty__details_ {
        font-size: 18px;
      }
      .btns {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-direction: column;
      }
      .odbtns {
        display: flex;
        justify-content: space-around;
        width: 100%;
        margin: 20px 0px;
      }
      .odbtns a {
        align-items: center;
        text-decoration: none;
      }
      button {
        width: 150px;
        height: 50px;
        border: none;
        font-family: inherit;
        font-weight: 500;
        background-color: #0189f8;
        font-size: 18px;
        color: white;
        border-radius: 10px;
        transition: all 0.3s ease;
      }

      table {
        border-collapse: collapse;
        width: 100%;
        height: 100%;
        overflow-x: scroll;
      }
      td,
      th {
        padding: 7px 10px;
      }
      .day {
        background-color: rgb(208, 216, 230);
      }
      tr > th {
        background-color: rgb(255, 255, 255);
      }
      #out {
        background-color: transparent;
      }

      .delete {
        background-color: #696969;
        color: #fff;
        z-index: -1;
      }
      .backward {
        position: absolute;
        top: 10px;
        left: 10px;
      }
      .backward i {
        font-size: 30px;
      }
      .container {
        position: relative;
      }
      .timetable {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 65em;
        height: 400px;
        padding: 10px;
      }
      .outer-table {
        width: 350px;
        overflow-x: scroll;
      }
      .today-status {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 300px;
        height: 50px;
      }
      .today-switch {
        width: 70px;
        height: 35px;
        background-color: #00ad2e;
        border-radius: 50px;
        position: relative;
      }
      .today-switch::before {
        content: "";
        position: absolute;
        width: 25px;
        height: 25px;
        top: 5px;
        left: 5px;
        background-color: rgb(255, 255, 255);
        border-radius: 50%;
        transition: all 0.3s ease;
      }
      .today-switch.absent::before {
        left: 40px;
        background-color: #ffffff;
      }
      .today-switch.absent {
        background-color: #c60000;
      }
      .today-status img {
        width: 40px;
        height: 40px;
      }
      .bold {
        font-weight: 500;
        font-size: 18px;
      }
      .details__ p {
        width: 100%;
        font-size: 15px;
        text-align: left !important;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        flex-direction: column;
        gap: 10px;
      }

      .fa-solid {
        padding-right: 5px;
      }
      .delete-conformation {
        position: absolute;
        width: 350px;
        height: 28%;
        background-color: #ffffff;
        border-radius: 5px;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        flex-direction: column;
        padding: 15px;
        top: 205px;
        gap: 10px;
        animation: popup 0.3s ease;
        transition: all 0.3s ease;
        opacity: 1 !important;
      }
      @keyframes popup {
        0% {
          transform: scale(0);
        }
      }
      .delete-conformation.hide {
        display: none;
      }

      .delete-conformation h2 {
        font-size: 25px;
        font-weight: 500;
      }
      .conf-btns {
        display: flex;
        width: 100%;
        align-items: center;
        justify-content: center;
        gap: 15px;
      }
      .conf-btns button,
      .conf-btns a {
        width: 100%;
      }
      .conf-delete {
        background-color: #7300ff;
      }
      .conf-cancel {
        background-color: #f97300;
      }
      .msg {
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      body.blur,
      body.blur table .day,
      body.blur table tr th {
        transition: all 0.3s ease;
        background-color: #656565;
      }
      .attendance {
        position: absolute;
        width: 350px;
        top: 205px;
        height: 40%;
        background-color: rgb(255, 255, 255);
        display: flex;
        justify-content: space-around;
        flex-direction: column;
        border-radius: 5px;
        align-items: center;
        animation: popup 0.3s ease;
        transition: all 0.3s ease;
      }
      .attendance.hide {
        display: none;
      }
      .presentimg,
      .absentimg {
        width: 70px;
        height: 70px;
        overflow: hidden;
        border-radius: 50%;
        object-fit: cover;
        object-position: center;
      }
      .presentimg img,
      .absentimg img {
        width: 100%;
      }
      .isavaliable {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
        gap: 20px;
      }
      .time {
        display: flex;
        flex-direction: column;
        width: 100%;
        justify-content: space-evenly;
        align-items: center;
        font-size: 20px;
      }
      .time > .clock > .num,
      .colon {
        font-family: "DS-DIGIB";
        position: relative;
        font-size: 60px;
      }
      .time > .clock > .num::before {
        content: "0";
        top: 0;
        left: 0;
        position: absolute;

        opacity: 0.3;
      }

      .update {
        width: 100%;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        padding: 5px;
      }
      .update a {
        width: 100%;
        text-decoration: none;
        display: flex;
        justify-content: center;
      }
      .update .cancel {
        background-color: #f97300;
      }
      .update .updatedb {
        background-color: #8b4efc;
      }

      .colon {
        animation: blink 1s ease infinite;
        margin: 0px 8px;
      }
      @keyframes blink {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }
      .clock {
        display: flex;
      }
      .day-date {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        gap: 15px;
      }
      .container header {
        display: flex;
        flex-direction: column;
        padding: 5px 5px 5px 15px;
        gap: 12px;
        background-color: #d1d1d1;
        position: sticky;
        top: 0;
        left: 0;
        width: 100%;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        z-index: 1;
        -webkit-transition: all 0.3s ease;
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
      }

      .title {
        color: #000000;
        display: flex;
        width: 100%;
        justify-content: space-between;
        align-items: center;
        height: 40px;
      }
      .title i {
        margin-right: 8px;
        font-size: 23px;
      }
      .status {
        border-radius: 50%;
      }
      .details__ {
        width: 100%;
      }
      .details__ img {
        width: 30px;
        height: 30px;
      }

      .name-status {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
      }

